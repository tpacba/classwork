<h1>Wishes</h1>

<h3>Save the wishes you need to get to later</h3>

<ul>
{{#each wishes}}
<li>
	<p>ID: {{this.id}}</p>
    <p>Task: {{this.wish}}</p>
</li>
{{/each}}
</ul>

<form action="/" method="POST">
	<textarea type="text" name="mywish"></textarea>
	<button type="submit">Submit</button>
</form>
